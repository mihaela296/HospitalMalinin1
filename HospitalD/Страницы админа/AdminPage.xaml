<Window x:Class="HospitalD.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalD"
        mc:Ignorable="d"
        Title="AdminPage" Height="450" Width="800">

    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Style="{StaticResource StackPanelAdmin}">
            <Button Content="Отделения" Style="{StaticResource MenuButtonStyle}" Click="Departments_Click"/>
            <Button Content="Должности" Style="{StaticResource MenuButtonStyle}" Click="Positions_Click"/>
            <Button Content="Сотрудники" Style="{StaticResource MenuButtonStyle}" Click="Staff_Click"/>
            <Button Content="Пациенты" Style="{StaticResource MenuButtonStyle}" Click="Patients_Click"/>
            <Button Content="Диагнозы" Style="{StaticResource MenuButtonStyle}" Click="Diagnoses_Click"/>
            <Button Content="Мед.процедуры" Style="{StaticResource MenuButtonStyle}" Click="MedicalProcedures_Click"/>
            <Button Content="Лекарства" Style="{StaticResource MenuButtonStyle}" Click="Medications_Click"/>
            <Button Content="Выйти" Style="{StaticResource LogoutButtonStyle}" Click="Logout_Click"/>
        </StackPanel>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>